<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/recycleView_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp">

    <ImageView
        android:id="@+id/recycleView_imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/recycleView_imageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/recycleView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:maxLines="2"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/recycleView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recycleView_imageView"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    </LinearLayout>

</RelativeLayout>

    <ImageView
        android:id="@+id/recycleView_image_fav"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_heart"/>

</RelativeLayout>